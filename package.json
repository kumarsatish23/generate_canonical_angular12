{
  "name": "jius-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "dev:ssr": "ng run jius-frontend:serve-ssr",
    "serve:ssr": "node dist/****-frontend/server/main.js",
    "build:ssr-stg": "ng build --configuration=staging && sitemap-generator https://staging.**********.com -f src/sitemap.xml && ng run jius-frontend:server --configuration=development",
    "build:ssr-local": "ng build --configuration=development && ng run jius-frontend:server  --configuration=development",
    "build:ssr": "ng build --configuration=production && sitemap-generator https://**********.com -f src/sitemap.xml && ng run jius-frontend:server",
    "prerender": "ng run jius-frontend:prerender"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.1.0-",
    "@angular/cdk": "^12.2.13",
    "@angular/common": "~12.1.0-",
    "@angular/compiler": "~12.1.0-",
    "@angular/core": "~12.1.0-",
    "@angular/forms": "~12.1.0-",
    "@angular/material": "^12.2.13",
    "@angular/platform-browser": "~12.1.0-",
    "@angular/platform-browser-dynamic": "~12.1.0-",
    "@angular/platform-server": "~12.1.0-",
    "@angular/router": "~12.1.0-",
    "@nguniversal/express-engine": "^13.0.1",
    "bootstrap": "^5.1.3",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "markdown-to-html-pipe": "^1.2.5",
    "ng2-adsense": "^10.1.0",
    "rxjs": "~6.6.0",
    "sitemap-generator-cli": "^7.5.0",
    "tslib": "^2.2.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.1.3",
    "@angular/cli": "~12.1.3",
    "@angular/compiler-cli": "~12.1.0-",
    "@angular/platform-server": "^13.0.2",
    "@nguniversal/builders": "^13.0.1",
    "@types/express": "^4.17.0",
    "@types/jasmine": "~3.8.0",
    "@types/node": "^12.11.1",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "typescript": "~4.3.2"
  }
